DIR=$your path for install_wrf.sh

# set pgi

export PGI=$your pgi path

export PATH=$PGI/linux86-64/17.10/bin:$PATH

export MANPATH=$PGI/linux86-64/17.10/man/man1:$MANPATH

export LM_LICENSE_FILE=$PGI/license.dat

export LD_LIBRARY_PATH=$PGI/linux86-64/17.10/lib:$LD_LIBRARY_PATH

# set JASPER

export JASPER=$DIR/env

export PATH=$JASPER/bin:$PATH

export JASPERLIB=$JASPER/lib

export JASPERINC=$JASPER/include

export LD_LIBRARY_PATH=$JASPER/lib:$LD_LIBRARY_PATH

# set zlib

export ZLIB=$DIR/env

export ZLIBLIB=$ZLIB/lib

export ZLIBINC=$ZLIB/include

#export LD_LIBRARY_PATH=$ZLIB/bin:$LD_LIBRARY_PATH

# set libpng

export LIBPNG=$DIR/env

export LIBPNGLIB=$LIBPNG/lib

export LIBPNGINC=$LIBPNG/include

export PATH=$LIBPNG/bin:$PATH

export LD_LIBRARY_PATH=$LIBPNG/lib:$LD_LIBRARY_PATH

